@using ContactsManager.Core.Domain.IdentityEntities;
@using Microsoft.AspNetCore.Identity;
@model List<ApplicationUser>;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <link rel="Stylesheet" href="~/AdminStyles.css">
</head>
<body>
    <header>
        <h1>Admin Dashboard</h1>
        <nav>
            <ul>
                <li><a href="#">Dashboard</a></li>
                <li><a href="/People/Index">People</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="cards">
            <div class="card">
                <h2>Total Users</h2>
                <p>500</p>
            </div>
            <div class="card">
                <h2>Total Products</h2>
                <p>200</p>
            </div>
            <div class="card">
                <h2>Revenue</h2>
                <p>$10,000</p>
            </div>
        </section>

        <section class="table">
            <table>
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </main>
</body>
</html>